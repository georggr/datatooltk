<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="DickimawBooks\DatatoolTk"
                location="applications||startMenu"/>
  <shortcut
    name="DatatoolTk GUI"
    target="$INSTALL_PATH\bin\datatooltk-gui.bat"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="GUI to accompany datatool.sty"
    iconFile="$INSTALL_PATH\lib\icons\datatooltk.ico"
    iconIndex="0"
    initialState="noShow||normal||maximized||minimized"
    programGroup="yes||no"
    desktop="yes||no"
    applications="yes||no"
    startMenu="yes||no"
    startup="yes||no">

    <createForPack name="Base"/>
  </shortcut>

  <shortcut
    name="DatatoolTK Uninstaller"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no"
    target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
    commandLine=""
    iconFile="%SystemRoot%\system32\SHELL32.dll"
    iconIndex="31"
    description="Uninstall DatatoolTk ${project.version}"
    initialState="noShow"
  >

    <createForPack name="Base"/>
  </shortcut>

  <shortcut
    name="DatatoolTK Documentation"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="yes"
    startup="no"
    target="$INSTALL_PATH\doc\datatooltk-en-GB.pdf"
    commandLine=""
    encoding="UTF-8"
    iconFile="%SystemRoot%\system32\SHELL32.dll"
    iconIndex="23"
    description="DatatoolTK ${project.version} user manual (PDF format)">

    <createForPack name="Documentation GB"/>
  </shortcut>

  <shortcut
    name="DatatoolTK Documentation"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="yes"
    startup="no"
    target="$INSTALL_PATH\doc\datatooltk-en-US.pdf"
    commandLine=""
    encoding="UTF-8"
    iconFile="%SystemRoot%\system32\SHELL32.dll"
    iconIndex="23"
    description="DatatoolTK ${project.version} user manual (PDF format)">

    <createForPack name="Documentation US"/>
  </shortcut>

</shortcuts>
